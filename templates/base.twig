<!doctype html>
<!--[if lt IE 9]><html class="no-js no-svg ie lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 9]><html class="no-js no-svg ie ie9 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 9]><!--><html class="no-js no-svg" {{ site.language_attributes }}> <!--<![endif]-->

	{# BEGIN HEAD #}
	<head>
		<meta charset="{{ site.charset }}" />
		<meta name="description" content="{{ site.description }}">
		<link rel="icon" type="image/x-icon" href="{{ theme.path ~ '/static/img/favicon.svg' }}" />
		<link rel="stylesheet" href="{{ site.theme.link }}/style.css" type="text/css" media="screen" />
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="author" href="{{ site.theme.link }}/humans.txt" />
		<link rel="pingback" href="{{ site.pingback_url }}" />
		<link rel="profile" href="http://gmpg.org/xfn/11">
		{{function('wp_head')}}
	</head>
	{# END HEAD #}

	{# BEGIN BODY #}
	<body class="{{body_class}}" data-template="base.twig">
		<a class="skip-link screen-reader-text" href="#content">{{ _e( 'Skip to content') }}</a>

		{% if post.slug != 'login' %}
			{% include 'partials/header.twig' %}
		{% endif %}

		{# BEGIN MAIN #}
			{% block content %}
				Sorry, no content
			{% endblock %}
		{# END MAIN #}

		{% if post.slug != 'login' %}
			{% include 'partials/footer.twig' %}
		{% endif %}

	{# BEGIN SCRIPTS #}
	<script src="https://unpkg.com/alpinejs" type="text/javascript" crossorigin="anonymous"></script>
	<script src="{{ site.theme.link }}/index.js" type="text/javascript"></script>
	{# END SCRIPTS #}

	{{ function('wp_footer') }}
	</body>
	{# END BODY #}
</html>
