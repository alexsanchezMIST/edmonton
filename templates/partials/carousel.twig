<section id="carousel--{{ block.id }}" class="carousel">
    <div class="container">
        <div class="glider">
            {% for post in logos %}
                <div class="glider--slide">
                    <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" class="glider--logo">
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js">
    new Glider(document.querySelector('.glider'), {
        slidesToShow: 1,
        slidesToScroll: 1,
        rewind: true,
        responsive: [
            {
                breakpoint: 768,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 3,
                }
            },
            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 5,
                    slidesToScroll: 5,
                }
            }
        ]
    })
</script>


